---
 
 import Tasas from '../components/setTasasCambio.jsx';
import Base from "../components/BaseGerencia.astro";
import Sidebar from "../components/sidebarAdmin.astro";
import Container from"../components/Container.astro";
export const prerender = true;
---

<Base>
  <section class="flex flex-col lg:flex-row min-h-screen">
    <Container className={"flex flex-col lg:flex-row gap-10 lg:gap-10"}>
      <!-- Sidebar -->
      <Sidebar />

      <div class="relative dark:border-gray-800 flex flex-col items-center text-center lg:text-left lg:py-7 xl:py-8 lg:items-start
                  lg:max-w-none max-w-5xl mx-auto lg:mx-0 lg:flex-1 lg:w-1/2">
           
                    <div class="w-full h-full rounded-2xl shadow-xl overflow-hidden transition-all duration-1000 hover:shadow-2xl">
                      
                      <img 
                        src="images/ladetec.jpg" 
                        alt="Descripción de la imagen"
                        class="w-full h-full object-fit rounded-2xl shadow-xl  left-0 opacity-50 z-10 transition-opacity duration-300 hover:opacity-20"
                      >
                    
                    </div>
            
      </div>   
            <Tasas client:load />
      
    </Container>
  </section>
  {/* Aquí envolvemos el contenido dinámico con el UserProvider 
    <UserProvider>
      <ReactApp />
    </UserProvider> */}
   
 
</Base>