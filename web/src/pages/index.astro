---
import Base from "../components/Base.astro";
import Container from"../components/Container.astro";
//import { UserProvider } from '../context/UserContext'; // Importa el contexto
//import ReactApp from '../components/ReactApp'; // Importa tu aplicación React
//import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
import Login from "../components/setLogin.astro";
import Portada from "../components/Portada.astro";
import Sidebar from "@/components/sidebarPortada.astro";
export const prerender = true;
import moment from 'moment-timezone';
import { ViewTransitions } from 'astro:transitions';


// Configura la zona horaria global al iniciar la app
moment.tz.setDefault('America/Havana');
---

<Base>

<Container className="flex flex-col lg:flex-row gap-10 lg:gap-10">
  <div class="min-h-screen flex bg-gray-50 dark:bg-gray-900 transition-colors duration-300">
    <!-- Sidebar izquierdo -->
    <aside class="w-64 p-4 border-r border-gray-300 dark:border-gray-700 bg-white dark:bg-gray-800 shadow-sm dark:shadow-gray-700/50 transition-all duration-300">
      <Sidebar />
    </aside>

    <!-- Contenido principal -->
    <div class="flex-1 flex flex-col md:flex-row bg-white/50 dark:bg-gray-900/95 transition-colors duration-300">
      <!-- Columna izquierda (Título y contenido) -->
      <div class="w-full md:w-1/2 p-6 flex flex-col">
        <h1 class="font-lora border-r border-gray-300 italic text-4xl md:text-5xl font-bold mb-4 text-gray-800 dark:text-white transition-colors duration-300">
          Ladetec Solutions
        </h1>
        <p class="font-lora text-xl mb-6 italic text-gray-700 dark:text-gray-300 transition-colors duration-300">
          Somos un equipo de ingenieros creando soluciones tecnologicas con enfasis en la industria 4.0. 
          Con mas de 30 años de experiencia en la modernizacion y mantenimiento de la red de radares en Cuba,
          ponemos nuestro talento al servicio de la industria cubana. Desde un simple instrumento, a una linea de produccion
          tenemos la solucion. Desde la conceptualizacion hasta la implementacion, le acompañamos todo el camino.
        </p>
      </div>

      <!-- Columna derecha (Imagen) -->
      <div class="w-full md:w-1/2 flex items-center justify-center p-6">
        <div class="w-full h-80 rounded-2xl shadow-xl overflow-hidden transition-all duration-300 hover:shadow-2xl hover:scale-[1.02] relative bg-gray-100 dark:bg-gray-800 border border-gray-200 dark:border-gray-700">
          <img 
            src="images/ladetec1.jpg" 
            alt="Equipo de Ladetec Solutions"
            class="w-full h-full object-cover transition-opacity duration-300 hover:opacity-95"
          />
        </div>
      </div>
    </div>
  </div>
</Container>
<Container>
<section class="dark:from-blue-800 dark:to-blue-900 text-white py-20">
    <div class="container mx-auto px-6 text-center fade-in">
        <h1 class="text-4xl md:text-6xl font-bold mb-6 slide-up dark:text-white">Soluciones Integrales</h1>
        <p class="text-xl md:text-2xl mb-8 max-w-3xl mx-auto slide-up dark:text-gray-100">Expertos en servicios eléctricos y desarrollo de software a medida para tu negocio</p>
        <div class="flex flex-col sm:flex-row justify-center gap-4 slide-up">
            <a href="#contacto" class="bg-white text-blue-600 dark:bg-gray-100 dark:text-blue-800 px-8 py-3 rounded-md font-semibold hover:bg-gray-100 dark:hover:bg-gray-200 transition duration-300">Contáctanos</a>
            <a href="#servicios" class="bg-transparent border-2 border-white dark:border-gray-200 px-8 py-3 rounded-md font-semibold hover:bg-white hover:text-blue-600 dark:hover:bg-gray-200 dark:hover:text-blue-800 transition duration-300">Nuestros Servicios</a>
        </div>
    </div>
</section>
</Container>

<Container>
<section id="servicios" class="dark:bg-gray-900 dark:text-gray-300  text-white">
        <!-- Servicios Section - Versión modificada para dark mode -->
<div class="grid grid-cols-1 md:grid-cols-3 gap-10">
    <!-- Servicio 1 -->
    <div class="bg-gray-50 dark:bg-gray-800 p-8 rounded-lg shadow-lg hover-scale transition-all duration-300 slide-up">
        <div class="bg-blue-100 dark:bg-blue-900 w-16 h-16 rounded-full flex items-center justify-center mb-6 mx-auto">
            <svg class="w-8 h-8 text-blue-600 dark:text-blue-300" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
            </svg>
        </div>
        <h3 class="text-xl font-semibold mb-4 text-center dark:text-white">Consultoría Especializada</h3>
        <p class="text-gray-600 dark:text-gray-300">Análisis y asesoramiento profesional para optimizar tus sistemas eléctricos y tecnológicos.</p>
    </div>
    
    <!-- Servicio 2 -->
    <div class="bg-gray-50 dark:bg-gray-800 p-8 rounded-lg shadow-lg hover-scale transition-all duration-300 slide-up" style="animation-delay: 0.2s;">
        <div class="bg-blue-100 dark:bg-blue-900 w-16 h-16 rounded-full flex items-center justify-center mb-6 mx-auto">
            <svg class="w-8 h-8 text-blue-600 dark:text-blue-300" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
            </svg>
        </div>
        <h3 class="text-xl font-semibold mb-4 text-center dark:text-white">Implementación</h3>
        <p class="text-gray-600 dark:text-gray-300">Ejecución profesional de proyectos eléctricos y de software con los más altos estándares.</p>
    </div>
    
    <!-- Servicio 3 -->
    <div class="bg-gray-50 dark:bg-gray-800 p-8 rounded-lg shadow-lg hover-scale transition-all duration-300 slide-up" style="animation-delay: 0.4s;">
        <div class="bg-blue-100 dark:bg-blue-900 w-16 h-16 rounded-full flex items-center justify-center mb-6 mx-auto">
            <svg class="w-8 h-8 text-blue-600 dark:text-blue-300" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z"></path>
            </svg>
        </div>
        <h3 class="text-xl font-semibold mb-4 text-center dark:text-white">Mantenimiento</h3>
        <p class="text-gray-600 dark:text-gray-300">Soporte continuo y actualizaciones para garantizar el óptimo funcionamiento de tus sistemas.</p>
    </div>
</div>
    </section>
</Container>
 
  {/* Aquí envolvemos el contenido dinámico con el UserProvider 
    <UserProvider>
      <ReactApp />
    </UserProvider> */}
</Base>  