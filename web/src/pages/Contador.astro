---
import ContadorModule from '../components/ContadorModule.jsx';
import Base from "../components/BaseGerencia.astro";
import Container from"../components/Container.astro";
import Sidebar from "@/components/sidebarAdmin.astro";
export const prerender = true;
---

<Base>
   <section class="flex flex-col lg:flex-row min-h-screen">
    <Container className={"flex flex-col lg:flex-row gap-10 lg:gap-10"}>
      <!-- Sidebar -->
      <Sidebar />

      <div class="relative flex flex-col items-center text-center lg:text-left lg:py-7 xl:py-8 lg:items-start
                  lg:max-w-none max-w-5xl mx-auto lg:mx-0 lg:flex-1 lg:w-1/2">
            <h4 class="text-1xl/tight sm:text-4xl/tight md:text-5xl/tight xl:text-6xl/tight
             font-bold text-heading-1">
             Contador  <span class="text-transparent bg-clip-text bg-gradient-to-br from-indigo-600 from-20% via-primary via-30% to-green-600"></span>
            </h4>
      </div>

       <ContadorModule />
    </Container>
  </section>

 
</Base>  
